{
  "compilerOptions": {
    "target": "ES2022",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "module": "ESNext",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    "types": [
      "node",
      "vite/client"
    ],
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force",
    "allowJs": true,
    "jsx": "react-jsx",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "allowImportingTsExtensions": true,
    "noEmit": true
  },
  "include": [
    "src/**/*",
    "public/**/*",
    "constants/**/*",
    "utils/**/*",
    "workers/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    ".vite",
    "_archived",
    "migrations",
    "template",
    "ui",
    "scripts",
    "eslint-rules",
    ".github",
    ".claude",
    ".roo",
    ".vscode",
    "scripts"
  ]
}